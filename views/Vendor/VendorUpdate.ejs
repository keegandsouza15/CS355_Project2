<%- include("../includes/header.ejs", {title: "Update "+result[0].Vendor_Name }); %>

<h1>Update <%= result [0].Vendor_Name%></h1>
<form action="/Vendor/update" method="get">
    <input type="hidden" id="Vendor_id" name="Vendor_id" value="<%= result[0].Vendor_id %>">
    Vendor Name: <input id="Vendor_Name" name="Vendor_Name" type="text" value="<%=result.Vendor_Name%>"/>
    <br />
    <br />
    Addresses <br />
    <select id="Address_id" name="Address_id">
        <% for(var i=0; Address.length > i; i++ ) {
            var selected = "";

            if(Address[i].Address_id != null) {
                selected = "selected";
            }
        %>

        <option value="<%= Address[i].Address_id %>" <%= selected %> ><%= Address[i].Street + ', ' + Address[i].State +' ' + Address[i].Zip %></option>
        <% }%>
    </select>

    <!-- Initialize the multiselect plugin: -->
    <script type="text/javascript">
        $(document).ready(function() {
            $('#Address_id').multiselect();
        });
    </script>

    <br />

    <input type="submit" />

</form>

<%- include("../includes/footer.ejs"); %>